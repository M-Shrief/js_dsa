{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "src",
    "sourceMap": true,
    "skipLibCheck": true,
    "types": ["vitest/importMeta"]
  },
  "include": ["src"],
  "exclude": ["src/**/*.spec.ts"]
}
